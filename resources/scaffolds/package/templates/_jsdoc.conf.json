{
    "source"    : {
        "include" : [
            "./README.md"
        ]
    },
    "tags"      : {
		"allowUnknownTags" : true
	},
	"plugins"   : ["plugins/markdown"],

	"templates" : {
		"cleverLinks"           : false,
		"monospaceLinks"        : false,
		"dateFormat"            : "ddd MMM Do YYYY",
		"outputSourceFiles"     : true,
		"outputSourcePath"      : true,
		"systemName"            : "{{webPkgName}}",
		"footer"                : "",
		"copyright"             : "{{webPkgName}} Copyright Â© {{currentYear}} Glue Networks Inc.",
		"navType"               : "vertical",
		"theme"                 : "spacelab",
      "xtheme"                 : "superhero",
		"linenums"              : true,
		"collapseSymbols"       : false,
		"inverseNav"            : true,
		"highlightTutorialCode" : true,
		"protocol": "fred://"
	},
	"markdown"  : {
		"parser"   : "gfm",
		"hardwrap" : true
	}
}
